<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 class="text-center">Create A New Campground</h1>
        <div style="margin: 25px auto; width: 30%;">
            <form action="/campgrounds" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Campground name..." required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="price" min="0.01" step="0.01" placeholder="Campground price..." required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="Campground image..." required>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="description" placeholder="Campground description..." required>
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type="submit" value="Add New Campground">
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>